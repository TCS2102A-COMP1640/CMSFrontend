{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es5",
		"jsx": "react",
		"module": "es6",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"declaration": false,
		"removeComments": true,
		"strict": true,
		"outDir": "dist",
		"lib": ["es6", "es7", "dom"],
		"baseUrl": "src",
		"paths": {
			"app/*": ["./app/*"]
		},
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
	},
	"exclude": ["dist", "node_modules"]
}
